<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_grey"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/shop_detail_backward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_backward_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商铺详情"
            android:textSize="20sp"

            android:layout_marginTop="4dp"
            />
        </LinearLayout>
        <Button
            android:id="@+id/shop_detail_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_favorite_style"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/picture_demo"
        android:background="@color/common_title"
        android:scaleType="fitXY"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    >
    <TextView
        android:id="@+id/shop_detail_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="皇中百岁鱼"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/shop_detail_name"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RMB"
            android:textSize="22sp"
            android:textColor="@color/common_title"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/shop_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78"
            android:textSize="25sp"
            android:textColor="@color/common_title"
            />
    </LinearLayout>
    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即抢购"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_shop_detail_order_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@color/common_white"
        android:gravity="center"
        >
        <Button
            android:id="@+id/location"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/nearby_location_button_style"
            />
        <TextView
            android:id="@+id/shop_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长安区西安电子科技大学综合楼西街1楼18号"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/common_bg_grey"
            android:layout_marginRight="15dp"
            >

        </LinearLayout>
        <Button
            android:id="@+id/phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shop_detail_phone_button_bg_style"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/common_white"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="评论列表"
            android:textColor="@color/common_title"
            android:textSize="15sp"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/common_white"
        android:gravity="center"
        >
        <!--<Button-->
        <!--android:id="@+id/getComment"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="查看评论"-->
        <!--/>-->
        <ListView
            android:id="@+id/comment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"

            android:paddingTop="@dimen/activity_vertical_margin"

            />




    </LinearLayout>

</LinearLayout>
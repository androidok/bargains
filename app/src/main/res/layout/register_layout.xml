<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户："
                />
            <EditText
                android:id="@+id/etRegAccount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="请在此输入注册的账户"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                />
            <EditText
                android:id="@+id/etRegPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="请在此输入登录密码"
                android:inputType="textPassword" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码："
                />

            <EditText
                android:id="@+id/etSurePassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="请与上栏密码保持一致"
                android:inputType="textPassword" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                />
            <EditText
                android:id="@+id/etName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="请在此输入姓名"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机："
                />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="请在此输入手机号"
                 />


        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/btn_reg_register"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/btn_register"
                android:background="@drawable/button_login_register_style"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>